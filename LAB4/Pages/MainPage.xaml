<Window
    Height="700"
    Title="MainPage"
    Width="650"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab4_2.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab4_2.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid>
        <Button
            Click="Search"
            Content="Пошук"
            Height="50"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Width="100" />
        <Button
            Click="UpdateInformationClick"
            Content="Оновити дані про себе"
            Height="50"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            VerticalAlignment="Top"
            Width="200" />
        <Button
            Click="Close"
            Content="Вийти"
            Height="50"
            HorizontalAlignment="Right"
            Margin="0,10,010,0"
            VerticalAlignment="Top"
            Width="100" />
        <Button
            Click="RateClick"
            Content="Оцінити спеціальність"
            Height="50"
            HorizontalAlignment="Right"
            Margin="0,10,010,0"
            VerticalAlignment="Bottom"
            Width="250" />

        <ListBox
            ItemsSource="{Binding Students}"
            Margin="50,100,50,50"
            Name="StudentsList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!--  Ім'я студента  -->
                        <TextBlock
                            Text="{Binding Name}"
                            VerticalAlignment="Center"
                            Width="150" />

                        <TextBlock
                            Text="{Binding Rating}"
                            VerticalAlignment="Center"
                            Width="100" />

                        <!--  Отримання детальної інформації про студента  -->
                        <Button
                            Click="DetailedInfoClick"
                            Content="Переглянути детальну інформацію"
                            Tag="{Binding}"
                            Width="Auto" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>