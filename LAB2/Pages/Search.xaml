<Window
    Height="600"
    Title="Search"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab4_2.Pages.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab4_2.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button
                Click="Close"
                Content="Close"
                Height="Auto"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="60" />
            <TextBlock
                FontSize="24"
                Margin="0,0,0,20"
                Text="Пошук студентів" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Ім'я:" />
                    <TextBox Margin="0,5,0,10" x:Name="NameSearchBox" />
                    <Button Click="SearchByName_Click" Content="Шукати за ім'ям" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Рейтинг:" />
                    <TextBox Margin="0,5,0,10" x:Name="RatingSearchBox" />
                    <Button Click="SearchByRating_Click" Content="Шукати за рейтингом" />
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Університет:" />
                    <TextBox Margin="0,5,0,10" x:Name="UniversitySearchBox" />
                    <Button Click="SearchByUniversity_Click" Content="Шукати за університетом" />
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Спеціальність:" />
                    <TextBox Margin="0,5,0,10" x:Name="SpecialtySearchBox" />
                    <Button Click="SearchBySpecialty_Click" Content="Шукати за спеціальністю" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <ListBox
            Grid.Row="1"
            Margin="0,20,0,0"
            x:Name="ResultsListBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="150" />
                        <TextBlock Text="{Binding Rating}" Width="50" />
                        <Button
                            Click="ShowDetails_Click"
                            Content="Деталі"
                            Tag="{Binding}"
                            Width="100" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>